<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#141D37">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#465171">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/back"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="8dp"/>
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/level"
        android:layout_gravity="center_horizontal|center_vertical"/>
    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        tools:text="4"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical|end">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/coin"/>
        <TextView
            android:id="@+id/tv_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="254"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/imag_lev1_1"
            android:layout_margin="4dp"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="4dp"
            android:src="@drawable/imeg_lev1_2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="24dp">
        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/imag_lev1_4"/>
        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imeg_lev1_3"/>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/group_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp">

        <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_answer_style"
                android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_answer_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_answer_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_answer_style"
            android:layout_marginHorizontal="4dp"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_answer_style"
            android:layout_width="37dp"
            android:layout_marginHorizontal="4dp" />
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_answer_style"
            android:layout_marginHorizontal="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_variants1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginHorizontal="4dp"
            style="@style/btn_variants_style" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/group_variant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_variants_style"
            android:layout_marginHorizontal="4dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginHorizontal="4dp"
            style="@style/btn_variants_style" />
    </LinearLayout>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_help"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="8dp"
    android:text="help"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:background="@drawable/bg_btn_help"/>
</LinearLayout>